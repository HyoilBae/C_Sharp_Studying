<Page
    x:Class="WebpageViewer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WebpageViewer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:Name="ResultTextBlock" HorizontalAlignment="Left" Margin="249,375,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top" Height="473" Width="1025"/>
        <TextBox x:Name="URLTextBox" HorizontalAlignment="Left" Margin="377,184,0,0" Text="Enter a valid url" VerticalAlignment="Top" Width="638"/>
        <TextBlock x:Name="URLLabel" HorizontalAlignment="Left" Margin="281,184,0,0" Text="URL" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:Name="StatusTextBlock" HorizontalAlignment="Left" Margin="749,925,0,0" Text="Waiting on url request" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button x:Name="LoadWebsiteButton" Content="Load Website" HorizontalAlignment="Left" Margin="1077,184,0,0" VerticalAlignment="Top" Click="LoadWebsiteButton_Click"/>

    </Grid>
</Page>
